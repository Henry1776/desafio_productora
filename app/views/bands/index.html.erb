<div class = "text-white">
<p id="notice"><%= notice %></p>

<h1 class = "text-white">Bands</h1>

<table class="table text-white">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th>Start date</th>
      <th>Band Concerts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class = "text-white">
    <% @bands.each do |band| %>
      <tr  class=" text-white">
        <td><%= band.name %></td>
        <td><%= band.kind %></td>
        <td><%= band.start_date %> </td>
        <th><%=band.concerts.count%></th>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Band', new_band_path %>

</div>